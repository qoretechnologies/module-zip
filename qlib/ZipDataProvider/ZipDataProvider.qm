%requires qore >= 2.0

%requires DataProvider
%requires Mime
%requires zip

%new-style
%strict-args
%require-types
%enable-all-warnings

module ZipDataProvider {
    version = "1.0";
    desc = "user module providing a data provider API for ZIP archives";
    author = "Qore Technologies, s.r.o.";
    url = "https://github.com/qoretechnologies/module-zip";
    license = "MIT";
    init = sub () {
        # Register the data provider factory
        DataProvider::registerFactory(new ZipDataProviderFactory());

        # Register the data provider application
        DataProviderActionCatalog::registerApp(<DataProviderAppInfo>{
            "name": ZipDataProvider::AppName,
            "display_name": "Zip Archive",
            "short_desc": "Zip archive operations",
            "desc": "Create, extract, and manage Zip archives with compression support",
            "logo": ZipLogo,
            "logo_file_name": "zip-logo.svg",
            "logo_mime_type": MimeTypeSvg,
        });

        # Register actions
        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": ZipDataProvider::AppName,
            "path": "/archive/create",
            "action": "create-archive",
            "display_name": "Create Archive",
            "short_desc": "Create a new zip archive",
            "desc": "Create a new zip archive from files, directories, or binary data",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": ZipDataProvider::AppName,
            "path": "/archive/extract",
            "action": "extract-archive",
            "display_name": "Extract Archive",
            "short_desc": "Extract a zip archive",
            "desc": "Extract all contents of a zip archive to a destination directory",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": ZipDataProvider::AppName,
            "path": "/archive/list",
            "action": "list-archive",
            "display_name": "List Archive Contents",
            "short_desc": "List files in a zip archive",
            "desc": "Get a list of all entries in a zip archive with metadata",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": ZipDataProvider::AppName,
            "path": "/archive/info",
            "action": "get-archive-info",
            "display_name": "Get Archive Info",
            "short_desc": "Get zip archive metadata",
            "desc": "Get metadata and statistics about a zip archive",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": ZipDataProvider::AppName,
            "path": "/archive/add",
            "action": "add-files",
            "display_name": "Add Files to Archive",
            "short_desc": "Add files to an existing archive",
            "desc": "Add new files or update existing files in a zip archive",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": ZipDataProvider::AppName,
            "path": "/file/extract",
            "action": "extract-file",
            "display_name": "Extract Single File",
            "short_desc": "Extract one file from archive",
            "desc": "Extract a single file from a zip archive to memory or disk",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": ZipDataProvider::AppName,
            "path": "/data/compress",
            "action": "compress-data",
            "display_name": "Compress Data",
            "short_desc": "Compress data to zip format",
            "desc": "Compress binary data or files into an in-memory zip archive",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": ZipDataProvider::AppName,
            "path": "/data/decompress",
            "action": "decompress-data",
            "display_name": "Decompress Data",
            "short_desc": "Decompress zip data",
            "desc": "Decompress an in-memory zip archive and return file contents",
            "action_code": DPAT_API,
        });
    };
}

public namespace ZipDataProvider {
    #! Application name
    public const AppName = "Zip";

    #! ZIP logo (loaded at initialization)
    public const ZipLogo = File::readTextFile(get_script_dir() + "/zip-logo.svg");

#! Request type for creating a ZIP archive
public hashdecl ZipCreateArchiveRequest {
    #! Output file path (optional if returning binary data)
    *string output_path;

    #! Entries to add: list of hashes with "name", "data" or "path", and optional "compression_method"
    list<hash<auto>> entries;

    #! Archive comment
    *string comment;

    #! Default compression method (0=store, 8=deflate)
    *int compression_method;

    #! Password for encryption (optional)
    *string password;
}

#! Response type for creating a ZIP archive
public hashdecl ZipCreateArchiveResponse {
    #! True if successful
    bool success;

    #! Output file path if written to disk
    *string output_path;

    #! Binary data if in-memory archive
    *binary data;

    #! Number of entries added
    int entry_count;

    #! Archive size in bytes
    int size;
}

#! Request type for extracting a ZIP archive
public hashdecl ZipExtractArchiveRequest {
    #! Input file path
    *string input_path;

    #! Binary data of the archive (alternative to input_path)
    *binary data;

    #! Destination directory
    string destination;

    #! Password for decryption (optional)
    *string password;
}

#! Response type for extracting a ZIP archive
public hashdecl ZipExtractArchiveResponse {
    #! True if successful
    bool success;

    #! Number of entries extracted
    int entry_count;

    #! Destination directory
    string destination;

    #! List of extracted file paths
    list<string> extracted_files;
}

#! Request type for listing archive contents
public hashdecl ZipListArchiveRequest {
    #! Input file path
    *string input_path;

    #! Binary data of the archive (alternative to input_path)
    *binary data;
}

#! Response type for listing archive contents
public hashdecl ZipListArchiveResponse {
    #! List of entries with their metadata
    list<hash<ZipEntryInfo>> entries;

    #! Total number of entries
    int count;
}

#! Request type for getting archive info
public hashdecl ZipArchiveInfoRequest {
    #! Input file path
    *string input_path;

    #! Binary data of the archive (alternative to input_path)
    *binary data;
}

#! Response type for getting archive info
public hashdecl ZipArchiveInfoResponse {
    #! Archive file path (if from file)
    *string path;

    #! Total number of entries
    int entry_count;

    #! Total uncompressed size
    int total_size;

    #! Total compressed size
    int compressed_size;

    #! Archive comment
    *string comment;
}

#! Request type for adding files to archive
public hashdecl ZipAddFilesRequest {
    #! Archive file path
    string archive_path;

    #! Entries to add: list of hashes with "name", "data" or "path"
    list<hash<auto>> entries;

    #! Password for new entries (optional)
    *string password;
}

#! Response type for adding files to archive
public hashdecl ZipAddFilesResponse {
    #! True if successful
    bool success;

    #! Number of entries added
    int entries_added;
}

#! Request type for extracting a single file
public hashdecl ZipExtractFileRequest {
    #! Archive file path
    *string archive_path;

    #! Binary data of the archive (alternative to archive_path)
    *binary archive_data;

    #! Name of the entry to extract
    string entry_name;

    #! Password for decryption (optional)
    *string password;

    #! Output file path (optional, if not specified returns data)
    *string output_path;
}

#! Response type for extracting a single file
public hashdecl ZipExtractFileResponse {
    #! True if successful
    bool success;

    #! Entry name
    string entry_name;

    #! Binary data (if not written to file)
    *binary data;

    #! Output file path (if written to file)
