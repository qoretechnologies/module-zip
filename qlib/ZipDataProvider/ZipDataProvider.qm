    public {
        const ProviderInfo = <DataProviderInfo>{
            "name": "add",
            "desc": "Add files to an existing ZIP archive",
            "type": "ZipAddFilesDataProvider",
            "supports_request": True,
        };
    }

    private {
        hash<auto> opts;
    }

